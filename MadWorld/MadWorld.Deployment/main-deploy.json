{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "baseUrl": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/oveldman/MadWorldTools/master/MadWorld/MadWorld.Deployment",
      "metadata": {
        "description": "Url to the base folder of the deployment files"
      }
    },
    "regionLocation": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "StaticWebsiteDeployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "relativePath": "static-website-deploy.json",
          "uri": "[parameters('baseUrl')]"
        },
        "parameters": {
          "regionLocation": {
            "value": "[parameters('regionLocation')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "BlobsDeployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "relativePath": "blobs-deploy.json",
          "uri": "[parameters('baseUrl')]"
        },
        "parameters": {
          "regionLocation": {
            "value": "[parameters('regionLocation')]"
          }
        }
      }
    }
  ],
  "outputs": {
  }
}