{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "regionLocation": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "Free",
      "metadata": {
        "description": "Adjust sku level"
      }
    },
    "skuCode": {
      "type": "string",
      "defaultValue": "Free",
      "metadata": {
        "description": "Adjust sku code level"
      }
    },
    "staticSites_admin_name": {
      "type": "string",
      "defaultValue": "WebApp-MadWorld-Admin",
      "metadata": {
        "description": "Name of the admin static site."
      }
    },
    "staticSites_tools_name": {
      "type": "string",
      "defaultValue": "WebApp-MadWorld-Tools",
      "metadata": {
        "description": "Name of the tools static site."
      }
    },
    "storageAccounts_madworldblobs_name": {
      "type": "string",
      "defaultValue": "blobsmadworld",
      "metadata": {
        "description": "Name of the storage account"
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Web/staticSites",
      "apiVersion": "2022-03-01",
      "name": "[parameters('staticSites_tools_name')]",
      "location": "[parameters('regionLocation')]",
      "sku": {
        "Tier": "[parameters('sku')]",
        "Name": "[parameters('skuCode')]"
      },
      "properties": {
        "repositoryUrl": "https://github.com/oveldman/MadWorldTools",
        "branch": "main",
        "stagingEnvironmentPolicy": "Enabled",
        "allowConfigFileUpdates": true,
        "provider": "GitHub",
        "enterpriseGradeCdnStatus": "Disabled"
      }
    },
    {
      "type": "Microsoft.Web/staticSites/customDomains",
      "apiVersion": "2022-03-01",
      "name": "[concat(parameters('staticSites_tools_name'), '/www.mad-world.nl')]",
      "location": "West Europe",
      "dependsOn": [
        "[resourceId('Microsoft.Web/staticSites', parameters('staticSites_tools_name'))]"
      ],
      "properties": {}
    },
    {
      "type": "Microsoft.Web/staticSites",
      "apiVersion": "2022-03-01",
      "name": "[parameters('staticSites_admin_name')]",
      "location": "[parameters('regionLocation')]",
      "sku": {
        "Tier": "[parameters('sku')]",
        "Name": "[parameters('skuCode')]"
      },
      "properties": {
        "repositoryUrl": "https://github.com/oveldman/MadWorldTools",
        "branch": "main",
        "stagingEnvironmentPolicy": "Enabled",
        "allowConfigFileUpdates": true,
        "provider": "GitHub",
        "enterpriseGradeCdnStatus": "Disabled"
      }
    },
    {
      "type": "Microsoft.Web/staticSites/customDomains",
      "apiVersion": "2022-03-01",
      "name": "[concat(parameters('staticSites_admin_name'), '/admin.mad-world.nl')]",
      "location": "West Europe",
      "dependsOn": [
        "[resourceId('Microsoft.Web/staticSites', parameters('staticSites_admin_name'))]"
      ],
      "properties": {}
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2022-05-01",
      "name": "[parameters('storageAccounts_madworldblobs_name')]",
      "location": "[parameters('regionLocation')]",
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      },
      "kind": "StorageV2",
      "properties": {
        "minimumTlsVersion": "TLS1_2",
        "allowBlobPublicAccess": true,
        "networkAcls": {
          "bypass": "AzureServices",
          "virtualNetworkRules": [],
          "ipRules": [],
          "defaultAction": "Allow"
        },
        "supportsHttpsTrafficOnly": true,
        "encryption": {
          "services": {
            "file": {
              "keyType": "Account",
              "enabled": true
            },
            "blob": {
              "keyType": "Account",
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        },
        "accessTier": "Hot"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices",
      "apiVersion": "2022-05-01",
      "name": "[concat(parameters('storageAccounts_madworldblobs_name'), '/default')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts_madworldblobs_name'))]"
      ],
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      },
      "properties": {
        "cors": {
          "corsRules": []
        },
        "deleteRetentionPolicy": {
          "allowPermanentDelete": false,
          "enabled": false
        }
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/fileServices",
      "apiVersion": "2022-05-01",
      "name": "[concat(parameters('storageAccounts_madworldblobs_name'), '/default')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts_madworldblobs_name'))]"
      ],
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      },
      "properties": {
        "protocolSettings": {
          "smb": {}
        },
        "cors": {
          "corsRules": []
        },
        "shareDeleteRetentionPolicy": {
          "enabled": true,
          "days": 7
        }
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/queueServices",
      "apiVersion": "2022-05-01",
      "name": "[concat(parameters('storageAccounts_madworldblobs_name'), '/default')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts_madworldblobs_name'))]"
      ],
      "properties": {
        "cors": {
          "corsRules": []
        }
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/tableServices",
      "apiVersion": "2022-05-01",
      "name": "[concat(parameters('storageAccounts_madworldblobs_name'), '/default')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccounts_madworldblobs_name'))]"
      ],
      "properties": {
        "cors": {
          "corsRules": []
        }
      }
    },
  ],
  "outputs": {}
}